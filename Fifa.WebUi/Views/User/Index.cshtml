@model IEnumerable<Fifa.Core.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Wins
        </th>
        <th>
            Draws
        </th>
        <th>
            Losses
        </th>
        <th>
            Rate
        </th>
        <th>
            Elo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@item.Name</td>
        <td>@item.UserStats.Wins</td>
        <td>@item.UserStats.Draws</td>
        <td>@item.UserStats.Losses</td>
        <td>@item.UserStats.WinRate.ToString("F2")</td>
        <td>@item.UserStats.Elo.ToString("F2")</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
