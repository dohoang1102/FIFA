@using Combres.Mvc

<!DOCTYPE html>

<html>
    <head>
        <title>FIFA - @ViewBag.Title</title>
        @Html.CombresLink("styles")
        @Html.CombresLink("scripts")
    </head>
    <body>
        <div class="page">
            <div id="header">
                <div id="title">
                    <h1>FIFA</h1>
                </div>
                <div id="logindisplay">
                    @Html.Partial("_LogOnPartial")
                </div>
                <div id="menucontainer">
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Games", "Index", "Game")</li>
                        <li>@Html.ActionLink("Teams", "Index", "Team")</li>
                        <li>@Html.ActionLink("Users", "Index", "User")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                </div>
            </div>
            <div id="main">
                @RenderBody()
            </div>
            <div id="footer">
            </div>
        </div>
    </body>
</html>