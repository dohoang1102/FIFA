@model int
           
@{
    var teamService = DependencyResolver.Current.GetService<Fifa.Core.Services.ITeamService>();
    var repo = teamService.GetAllTeams();
    var html = Html.DropDownListFor(x => x, repo.Select(x => new SelectListItem { Value = x.Id.ToString(), Text = x.Name, Selected = Model != null && x.Id == Model }), "Select...");
}

@html
