@model int
           
@{
    var userService = DependencyResolver.Current.GetService<Fifa.Core.Services.IUserService>();
    var repo = userService.GetAllUsers();
    var html = Html.DropDownListFor(x => x, repo.Select(x => new SelectListItem { Value = x.Id.ToString(), Text = x.Name, Selected = Model != null && Model == x.Id }), "Select...");
}

@html
