@model IEnumerable<Fifa.WebUi.Models.Game>
@{
    ViewBag.Title = "Index";
}
<h2>
    Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.Any())
{
    <table>
        <tr>
            <th>
            </th>
            <th>
                Competitors
            </th>
            <th>
                Score
            </th>
            <th>
                Date
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
                <td>
                    @item.PlayerA.Name (@item.TeamA.Name) - @item.PlayerB.Name (@item.TeamB.Name)
                </td>
                <td>
                    @item.ScoreA : @item.ScoreB
                </td>
                <td>
                    @String.Format("{0:g}", item.Date)
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>
        There are no items to show.</p>
}
